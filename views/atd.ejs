      <div class="card card-body form-login">
        <h1 class="text-center mb-3">
          <i class="fas fa-male"></i> Add Leavings
        </h1>
        <form action="/admin/attendence" method="POST">
        <div>
          
        </div>  
          <div class="form-group">
              <label for="eid">Employee ID</label>
              <input
                type="number"
                id="eid"
                name="eid"
                class="form-control"
                placeholder="Employee ID Goes Here"
                value="<%= typeof email != 'undefined' ? email : '' %>"
              />
            </div>
            
                  <div class="form-group">
                      <label for="month">Month</label>
                      <input
                        type="month"
                        id="month"
                        name="month"
                        class="form-control"
                        placeholder="Enter Month"
                        value="<%= typeof name != 'undefined' ? name : '' %>"
                        required
                        />
                    </div>
                    <div class="form-group">
                        <label for="leave">Number of Leavings</label>
                        <input
                          type="number"
                          id="leave"
                          name="leave"
                          class="form-control"
                          placeholder="Number of Leavings Goes Here"
                          value="<%= typeof name != 'undefined' ? name : '' %>"
                          required
                          />
                      </div>           
          
          <button type="submit" class="btn btn-success btn-block">
            Add
          </button>
        </form>
      </div>
